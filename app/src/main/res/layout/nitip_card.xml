<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="20dp"
    android:paddingHorizontal="10dp"
    android:paddingVertical="10dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/rounded_corner"
    android:backgroundTint="@color/colorPrimary"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvGroupName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="SLC222"
        android:textColor="@color/colorPrimaryVariant"
        />

    <TextView
        android:id="@+id/tvTitipName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tvGroupName"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Come n Eat"
        android:textSize="30dp"
        android:textColor="@color/colorOnPrimary"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/tvCreatorName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tvTitipName"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Jaysie"
        android:textColor="@color/colorPrimaryVariant"
        />

    <TextView
        android:id="@+id/tvFee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tvCreatorName"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="15dp"
        android:text="Rp. 1000"
        android:textSize="20dp"
        android:textColor="@color/colorPrimaryVariant"
        />

    <TextView
        android:id="@+id/tvCloseTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valid Until 10:00"
        android:textColor="@color/colorPrimaryVariant"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>